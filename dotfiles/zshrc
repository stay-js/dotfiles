export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(git)
source $ZSH/oh-my-zsh.sh

# rust
export OPENSSL_DIR=$(brew --prefix openssl)
export PKG_CONFIG_PATH='/opt/homebrew/opt/openssl/lib/pkgconfig cargo build'

alias mb='make build'

# docker
export PATH="$PATH:/Applications/Docker.app/Contents/Resources/bin/"

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s '/opt/homebrew/opt/nvm/nvm.sh' ] && \. '/opt/homebrew/opt/nvm/nvm.sh'
[ -s '/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm' ] && \. '/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm'

# bat
export BAT_THEME='ansi'
export BAT_STYLE='numbers,changes'

alias cat='bat'

# ls
alias l='eza -lah'
alias ls='eza'

# projects
alias p='cd ~/Projects'

# trash
alias rm='trash'

# open vscode faster
alias c="open $1 -a 'Visual Studio Code'"

# git
alias ga='git add'
alias gb='git branch'
alias gba='git branch --all'
alias gbd='git branch -D'
alias gc='git commit'
alias gco='git checkout'
alias gcp='git cherry-pick'
alias gd='git diff -w'
alias gds='git diff -w --staged'
alias grs='git restore --staged'
alias gs='git status'
alias gpr='git remote prune origin'
alias ff='gpr && git pull --ff-only'
alias grd='git fetch origin && git rebase origin/master'
alias gbb='git-switchbranch'
alias gl="git log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(white)%s%C(reset) %C(green)%an %ar %C(reset) %C(bold magenta)%d%C(reset)'"
alias grc='git rebase --continue'
alias gra='git rebase --abort'
alias gcan='gc --amend --no-edit'
alias gp='git push'
alias gpf='git push --force-with-lease'

# pnpm
export PNPM_HOME="/Users/stay/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac

alias pa='pnpm add'
alias pb='pnpm build'
alias pd='pnpm dev'
alias pi='pnpm install'
alias pl='pnpm lint'
alias plf='pnpm lint --fix'
alias pr='pnpm remove'
alias pu='pnpm update'

# brew
alias bi='brew install'
alias bbd='brew bundle dump --force'
alias bu='brew update && brew upgrade && brew cleanup && brew doctor'
alias br='brew remove'

# just
alias j='just'
alias jl='just --list'
alias jb='just build'
alias jd='just dev'
alias je='just exec'

# ip
alias ip="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"
alias ipv4='curl -4 icanhazip.com'
alias ipv6='curl -6 icanhazip.com'

# reload
alias reload='source ~/.zshrc'

# bun completions
[ -s "/Users/stay/.bun/_bun" ] && source "/Users/stay/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
